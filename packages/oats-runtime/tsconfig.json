{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "target": "es2022",
    "lib": ["es2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": false,
    "alwaysStrict": true,
    "baseUrl": ".",
    "paths": {
      "@smartlyio/oats-runtime": ["src/runtime"]
    },
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "exclude": ["node_modules/*", "*/**/dist/*", "dist/*", "test/"],
}
