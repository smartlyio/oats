{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "target": "es2017",
    "lib": ["es6", "es2019", "dom", "esnext.asynciterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": false,
    "alwaysStrict": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@smartlyio/oats-runtime": ["src/runtime"]
    },
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "exclude": ["node_modules/*", "*/**/dist/*", "dist/*", "test/"],
}
