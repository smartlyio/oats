{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": false,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "exclude": ["node_modules/*", "*/**/dist/*", "dist/*", "test/"],
}
