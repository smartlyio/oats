{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "target": "es2022",
    "lib": ["es2022"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": false,
    "alwaysStrict": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "baseUrl": "./src/types",
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "exclude": ["node_modules/*", "*/**/dist/*", "dist/*", "test/", "tmp/", "examples/"],
}
