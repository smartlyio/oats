{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "target": "es2022",
    "lib": ["es2022", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": false,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "exclude": ["adapters/", "runtime/", "examples/", "test-app/"]
}
