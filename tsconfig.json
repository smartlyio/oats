{
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "target": "es2017",
    "lib": ["es6", "es2017", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": false,
    "alwaysStrict": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "paths": {
      "@smartlyio/oats": ["packages/oats/index.ts"],
      "@smartlyio/oats-runtime": ["packages/oats-runtime/src/runtime.ts"],
      "@smartlyio/oats-axios-adapter": ["packages/oats-axios-adapter/index.ts"],
      "@smartlyio/oats-koa-adapter": ["packages/oats-koa-adapter/index.ts"]
    }
  },
  "exclude": ["**/node_modules", "**/dist", "coverage", "**/examples", "**/test"]
}
